{
  "env": {
		"browser": true,
    "es2021": true
	},
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "semi": 2,
		"indent": ["error", 2],
		"quotes": ["error", "single"],
    "@typescript-eslint/no-explicit-any": "error"
  }
}
